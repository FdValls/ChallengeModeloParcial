<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/primeraPantalla">
    <fragment
        android:id="@+id/primeraPantalla"
        android:name="com.example.challengemodeloparcial.PrimeraPantalla"
        android:label="fragment_primera_pantalla"
        tools:layout="@layout/fragment_primera_pantalla" >
        <action
            android:id="@+id/action_primeraPantalla_to_listProductFragment"
            app:destination="@id/listProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/listProductFragment"
        android:name="com.example.challengemodeloparcial.ListProductFragment"
        android:label="fragment_list_product"
        tools:layout="@layout/fragment_list_product" >
        <argument
            android:name="txtTitle"
            app:argType="string" />
        <action
            android:id="@+id/action_listProductFragment_to_terceraPantalla"
            app:destination="@id/terceraPantalla" />
    </fragment>
    <fragment
        android:id="@+id/terceraPantalla"
        android:name="com.example.challengemodeloparcial.TerceraPantalla"
        android:label="fragment_tercera_pantalla"
        tools:layout="@layout/fragment_tercera_pantalla" >
        <argument
            android:name="nameTitle"
            app:argType="string" />
        <action
            android:id="@+id/action_terceraPantalla_to_listProductFragment"
            app:destination="@id/listProductFragment" />
        <argument
            android:name="product"
            app:argType="com.example.challengemodeloparcial.Product" />
    </fragment>
</navigation>